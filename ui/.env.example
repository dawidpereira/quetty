# Environment variables for Quetty
# Copy this file to .env and configure your values

# Service Bus Connection String (for connection_string auth method)
# SERVICEBUS__CONNECTION_STRING="Endpoint=sb://your-namespace.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=your-key"
# SERVICEBUS__QUEUE_NAME="your-queue-name"
# SERVICEBUS__TOPIC_NAME=""
# SERVICEBUS__SUBSCRIPTION_NAME="your-subscription"

# Azure AD Configuration (for device_code/client_credentials auth methods)
# Required for all Azure AD auth methods:
AZURE_AD__TENANT_ID="your-tenant-id"
AZURE_AD__CLIENT_ID="your-client-id"

# Required only for client_credentials auth method:
# AZURE_AD__CLIENT_SECRET="your-client-secret"

# Optional - if not provided, will be discovered through Azure Management API:
# AZURE_AD__SUBSCRIPTION_ID="your-subscription-id"
# AZURE_AD__RESOURCE_GROUP="your-resource-group"
# AZURE_AD__NAMESPACE="your-servicebus-namespace"

# Azure API Configuration (usually don't need to change these)
AZURE_OAUTH_BASE_URL = "https://login.microsoftonline.com"
AZURE_MANAGEMENT_BASE_URL = "https://management.azure.com"
AZURE_API_VERSION = "2017-04-01"
AZURE_OAUTH_SCOPE = "https://management.azure.com/.default"
